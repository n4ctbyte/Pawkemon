<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane alignment="CENTER"
           style="-fx-background-image: url('/images/menu.png'); -fx-background-size: cover; -fx-background-position: center;"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ui.SelectionSceneController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" StackPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label text="Pilih Pawkemon Anda" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="36.0" />
                </font>
            </Label>
            <GridPane fx:id="pokemonGrid" alignment="CENTER" hgap="20.0" vgap="20.0" />
            <HBox alignment="CENTER" spacing="50.0">
                <VBox alignment="CENTER" spacing="10.0">
                    <Label text="Pawkemon Tim 1" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <HBox fx:id="team1Box" alignment="CENTER" spacing="10.0"
                          style="-fx-border-color: #3498db; -fx-border-width: 2; -fx-padding: 10;" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0">
                    <Label text="Pawkemon Tim 2" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <HBox fx:id="team2Box" alignment="CENTER" spacing="10.0"
                          style="-fx-border-color: #e74c3c; -fx-border-width: 2; -fx-padding: 10;" />
                </VBox>
            </HBox>
            <Button fx:id="startButton" disable="true" onAction="#startBattle"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 10 30;"
                    text="Mulai Pertarungan" />
        </VBox>
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClicked"
                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 14px;"
                text="Back to Menu" StackPane.alignment="TOP_LEFT">
            <StackPane.margin>
                <Insets left="20.0" top="20.0" />
            </StackPane.margin>
        </Button>
    </children>
</StackPane>